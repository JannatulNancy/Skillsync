@page
@model SkillSync.Pages.Skills.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/AdminMgt/_AdminMgtLayout.cshtml";
}

<h1>Edit</h1>

<h4>Skill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Skill.SkillId" />
            <div class="form-group">
                
                <label asp-for="Skill.Name" class="control-label"></label>
                <input asp-for="Skill.Name" class="form-control" />
                <span asp-validation-for="Skill.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Skill.Category" class="control-label"></label>
                <input asp-for="Skill.Category" class="form-control" />
                <span asp-validation-for="Skill.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Skill.Description" class="control-label"></label>
                <input asp-for="Skill.Description" class="form-control" />
                <span asp-validation-for="Skill.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Skill.Level" class="control-label"></label>
                <input asp-for="Skill.Level" class="form-control" />
                <span asp-validation-for="Skill.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Skill.AdminId" class="control-label"></label>
                <select asp-for="Skill.AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                <span asp-validation-for="Skill.AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
