@page
@model SkillSync.Pages.Skills.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/AdminMgt/_AdminMgtLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Skill) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.AdminId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SkillId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SkillId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SkillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
