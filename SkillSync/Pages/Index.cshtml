    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to SkillSync 👋</h1>

    <p class="lead">SkillSync is your gateway to personalized mentorship and collaborative learning.</p>

    <p>Use the navigation bar to:</p>
