@page
@model SkillSync.Pages.AdminMgt.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/AdminMgt/_AdminLayout.cshtml";
}

<h1 class="display-4 mb-4">Welcome👋</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Manage Admins</h5>
                <p class="card-text">Add, edit, or remove system administrators.</p>
                <a asp-page="./Admins/Index" class="btn btn-primary w-100">Go to Admins</a>
            </div>
        </div>

        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Manage Skills</h5>
                <p class="card-text">Create and manage the skills available to learners.</p>
                <a asp-page="../Skills/Index" class="btn btn-info w-100">Go to Skills</a>
            </div>
        </div>

        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Manage Learning Paths</h5>
                <p class="card-text">Structure guided learning journeys across multiple skills.</p>
                <a asp-page="../LearningPaths/Index" class="btn btn-warning w-100">Go to Paths</a>
            </div>
        </div>
    </div>
</div>

<hr />
<h3>🔔 Notifications</h3>
<div class="list-group mb-4">
    @foreach (var note in Model.Notifications)
    {
        <div class="list-group-item list-group-item-light d-flex justify-content-between align-items-center">
            @note
            @if (note.Contains("flagged"))
            {
                <a asp-page="../Moderation/Index" class="btn btn-sm btn-outline-danger">Review</a>
            }
        </div>
    }
</div>