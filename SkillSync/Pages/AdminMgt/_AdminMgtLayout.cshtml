@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-page="/Admin/Skills/Index">Skills</a></li>
                <li><a asp-page="/Admin/LearningPaths/Index">Learning Paths</a></li>
                <li><a asp-page="/Admin/Resources/Index">Resources</a></li>
                <li><a asp-page="/Admin/Users/Index">User Management</a></li>
                <li><a asp-page="/Index">Home</a></li>
            </ul>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; SkillSync Admin @DateTime.Now.Year</p>
    </footer>
</body>
</html>